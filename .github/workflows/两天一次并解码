name: gfwlist Update
on:
  push:
  schedule:
    # 每2天北京时间上午8点15分执行（UTC时间0点15分）
    - cron: '10 1 */2 * *'

jobs:
  build:
    runs-on: ubuntu-latest
    steps:
    - uses: actions/checkout@v3
    - name: Update gfwlist Files
      run: |
        # 1. 下载原始Base64格式的gfwlist
        rm -f gfwlist_base64 && wget https://raw.githubusercontent.com/gfwlist/gfwlist/master/gfwlist.txt -O gfwlist_base64
        # 2. 对下载文件进行Base64解码，输出为最终的gfwlist文件
        base64 -d gfwlist_base64 > gfwlist
        # 3. 删除临时的Base64原始文件（可选，保持目录整洁）
        rm -f gfwlist_base64
        
        git config --local user.name "github-actions[bot]"
        git config --local user.email "github-actions[bot]@users.noreply.github.com"
        git pull origin main
        git add gfwlist
        git commit -m "gfwlist Update (Base64 decoded)."  # 备注中添加解码说明，便于追溯
    - name: Push changes
      run: git push origin main
      env:
        GITHUB_TOKEN: ${{ secrets.GITHUB_TOKEN }}
    # 新增：发送Telegram通知
    - name: Send Telegram Notification
      run: |
        # 替换为你的Telegram Bot Token和接收消息的Chat ID
        TELEGRAM_BOT_TOKEN="你的Bot Token"
        TELEGRAM_CHAT_ID="你的Chat ID"
        # 通知内容（可自定义）
        MESSAGE="✅ gfwlist已成功更新！\n更新时间：$(date '+%Y-%m-%d %H:%M:%S UTC')\n备注：已完成Base64解码"
        # 调用Telegram Bot API发送消息
        curl -s "https://api.telegram.org/bot$TELEGRAM_BOT_TOKEN/sendMessage" \
          -d "chat_id=$TELEGRAM_CHAT_ID" \
          -d "text=$MESSAGE" \
          -d "parse_mode=Markdown"
 
